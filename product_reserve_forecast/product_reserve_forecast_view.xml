<?xml version="1.0" encoding="utf8" ?>
<openerp>
  <data>
    <record id="product_reserve_forecast_form" model="ir.ui.view">
      <field name="name">product.product.reserve</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_normal_form_view" />
      <field name="arch" type="xml">
        <xpath expr="//notebook/page[@string='Inventory']/group/group/field[3]" position="after">
          <!-- Put reserved field just after the Forecasted Quantity -->
          <field name="reserved" groups="product_reserve_forecast.group_product_reserve" />
        </xpath>
      </field>
    </record>
  </data>
</openerp>
